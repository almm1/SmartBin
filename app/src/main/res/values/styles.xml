<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="button_text">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="lineHeight">16sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="button_style">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/button_text</item>
    </style>

    <style name="light_button" parent="button_style">
        <item name="android:textColor">@color/green_base</item>
        <item name="android:backgroundTint">@color/green_lightest</item>
    </style>

    <style name="self_clean_text_style">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">32sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>

    <style name="title3">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">32sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>

    <style name="title2">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">36sp</item>
        <item name="android:lineSpacingExtra">-3sp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>

    <style name="regular_normal_regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">24sp</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>

    <style name="tiny_normal_regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">16sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6C7072</item>
    </style>

    <style name="small_normal_bold">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>
    <style name="regular_tight_regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">20sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>
    <style name="large_normal_bold">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">24sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#090A0A</item>
    </style>
    <style name="small_tight_regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">16sp</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6C7072</item>
    </style>

</resources>